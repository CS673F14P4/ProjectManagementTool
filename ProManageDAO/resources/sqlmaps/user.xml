<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bu.met.cs.cs673.pm.dto.User">
 
    <resultMap id="result" type="bu.met.cs.cs673.pm.dto.User">
        <result property="userid" column="iduser"/>
        <result property="email" column="email"/>
        <result property="username" column="username"/> 
        <result property="password" column="password"/> 
        <result property="firstname" column="firstname"/> 
        <result property="lastname" column="lastname"/> 
        <result property="createDate" column="createDate"/>
    </resultMap>
 
    <select id="selectAll" resultMap="result">
        SELECT * FROM user;
    </select>
 
    <select id="selectByName" parameterType="String" resultMap="result">
        SELECT * FROM user WHERE username = #{username}
    </select>
 
    <insert id="insert" > 
        insert into user (userid, email, username, password, firstname,lastname)
  		values (#{userid},#{email},#{username},#{password},#{firstname}, #{lastname})
    </insert>
 
    <update id="update" parameterType="bu.met.cs.cs673.pm.dto.User">
        UPDATE user
        SET firstname = #{firstname}, lastname = #{lastname}
        WHERE username = #{username} 
    </update>
 
    <delete id="delete" parameterType="String">
        DELETE from user WHERE username = #{username}
    </delete>
    
</mapper>